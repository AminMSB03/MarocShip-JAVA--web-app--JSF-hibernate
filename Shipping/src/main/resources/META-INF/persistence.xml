<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>com.example.shipping.Entities.User</class>
        <class>com.example.shipping.Entities.Admin</class>
        <class>com.example.shipping.Entities.Chauffeur</class>
        <class>com.example.shipping.Entities.Livraison</class>
        <class>com.example.shipping.Entities.Manager</class>
        <class>com.example.shipping.Entities.Vehicule</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:2022/ship"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>
            <!--<property name="jakarta.persistence.schema-generation.database.action" value="create"/>-->
        </properties>
    </persistence-unit>
</persistence>